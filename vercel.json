{
  "version": 2,
  "installCommand": "yarn install",
  "buildCommand": "yarn workspace frontend build",
  "outputDirectory": "frontend/dist",
  "builds": [
    {
      "src": "backend/src/serverless.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "backend/**"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/src/serverless.ts"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/dist/index.html"
    }
  ]
}
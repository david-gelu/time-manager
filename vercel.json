{
  "version": 2,
  "builds": [
    {
      "src": "backend/src/serverless.ts",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/vite.config.ts",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend/dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/src/serverless.ts"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/dist/$1"
    }
  ]
}
{
  "installCommand": "yarn install",
  "buildCommand": "yarn workspaces run build",
  "outputDirectory": "frontend/dist",
  "functions": {
    "api/**/*.{js,ts}": {
      "includeFiles": "backend/dist/**"
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}